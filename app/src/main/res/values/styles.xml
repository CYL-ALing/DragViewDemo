<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="DragView">
        <attr name="leftAlign" format="boolean" />
        <attr name="rightAlign" format="boolean" />
        <attr name="topAlign" format="boolean" />
        <attr name="bottomAlign" format="boolean" />
        <attr name="alignDistance" format="dimension" />
    </declare-styleable>

</resources>
